# Enable Rewrite Engine
RewriteEngine On

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.syedyusufhussaini\.com [NC]
RewriteRule ^(.*)$ https://syedyusufhussaini/$1 [L,R=301]

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Serve resources with proper MIME types
AddType text/css .css
AddType application/javascript .js
AddType image/jpeg .jpg .jpeg
AddType image/png .png
AddType image/gif .gif

# Set expiration headers for caching (1 week)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 week"
</IfModule>

# Compress text files (gzip compression)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript
</IfModule>

# Prevent directory listing
Options -Indexes